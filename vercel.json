{
  "version": 2,
  "name": "son1kvers3-enhanced",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "https://son1kvers3-backend.vercel.app",
    "REACT_APP_ENVIRONMENT": "production"
  },
  "functions": {
    "backend/main.py": {
      "runtime": "python3.9"
    }
  }
}