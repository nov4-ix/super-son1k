# Son1kVers3 Environment Variables
# Copia este archivo como .env.local y configura tus variables

# ===========================================
# FRONTEND VARIABLES
# ===========================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_VERCEL=false

# ===========================================
# BACKEND VARIABLES
# ===========================================
# Database
DATABASE_URL=sqlite:///./son1kvers3.db
# DATABASE_URL=postgresql://user:password@localhost/son1kvers3

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
SUNO_API_KEY=your_suno_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Voice Cloning
SO_VITS_API_URL=http://localhost:8002
BARK_API_URL=http://localhost:8003

# Nova Post Pilot
NOVA_POST_API_URL=http://localhost:8001
INSTAGRAM_API_KEY=your_instagram_api_key
TIKTOK_API_KEY=your_tiktok_api_key
YOUTUBE_API_KEY=your_youtube_api_key
TWITTER_API_KEY=your_twitter_api_key

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://son1kvers3.vercel.app

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# Redis (opcional)
REDIS_URL=redis://localhost:6379

# Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# ===========================================
# VERCEL SPECIFIC
# ===========================================
# Estas variables se configuran en el dashboard de Vercel
# No las pongas en .env.local

# VERCEL_URL (automático)
# VERCEL_ENV (automático)
# VERCEL_REGION (automático)