{
  "version": 2,
  "name": "son1kvers3-production",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PYTHON_VERSION": "3.9",
    "ENVIRONMENT": "production"
  },
  "functions": {
    "backend/main.py": {
      "runtime": "python3.9",
      "maxDuration": 30
    }
  }
}