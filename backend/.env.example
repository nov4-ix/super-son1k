# Son1kVers3 Enhanced - Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# CORE CONFIGURATION
# ============================================================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Security
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_this_in_production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite (default - no configuration needed)
# DATABASE_URL=sqlite:///./son1kvers3.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/son1kvers3

# Redis (optional - for caching and sessions)
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# AI & MACHINE LEARNING
# ============================================================================

# Ollama Configuration (local AI)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# OpenAI API (for advanced features)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Hugging Face (for models)
# HUGGINGFACE_API_KEY=hf_your_huggingface_token_here

# ============================================================================
# MUSIC GENERATION
# ============================================================================

# Suno API (for music generation)
# SUNO_API_KEY=your_suno_api_key_here
# SUNO_API_URL=https://api.suno.ai

# ============================================================================
# VOICE CLONING
# ============================================================================

# so-VITS-SVC Configuration
SOVITS_MODEL_PATH=./models/sovits
SOVITS_CONFIG_PATH=./models/sovits/config.json

# Bark Configuration
BARK_MODEL_PATH=./models/bark
BARK_USE_GPU=true

# Voice Cloning Service
VOICE_CLONING_URL=http://localhost:8002

# ============================================================================
# SOCIAL MEDIA APIS
# ============================================================================

# Nova Post Pilot Service
NOVA_POST_URL=http://localhost:8001

# Instagram
# INSTAGRAM_USERNAME=your_username
# INSTAGRAM_PASSWORD=your_password
# INSTAGRAM_ACCESS_TOKEN=your_access_token

# Twitter/X
# TWITTER_API_KEY=your_api_key
# TWITTER_API_SECRET=your_api_secret
# TWITTER_ACCESS_TOKEN=your_access_token
# TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret
# TWITTER_BEARER_TOKEN=your_bearer_token

# TikTok
# TIKTOK_API_KEY=your_api_key
# TIKTOK_API_SECRET=your_api_secret

# YouTube
# YOUTUBE_API_KEY=your_api_key
# YOUTUBE_CLIENT_ID=your_client_id
# YOUTUBE_CLIENT_SECRET=your_client_secret

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================

# Analytics Service
ANALYTICS_URL=http://localhost:8003

# Sentry (error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Prometheus (metrics)
# PROMETHEUS_PORT=9090

# ============================================================================
# STEALTH SYSTEM
# ============================================================================

# Stealth System Service
STEALTH_URL=http://localhost:8004

# Proxy Configuration
# PROXY_POOL_SIZE=10
# PROXY_ROTATION_INTERVAL=300
# PROXY_LIST=http://proxy1.com:8080,http://proxy2.com:8080

# User Agent Rotation
# USER_AGENT_ROTATION=true
# USER_AGENT_POOL_SIZE=20

# ============================================================================
# FILE STORAGE
# ============================================================================

# Local Storage (default)
UPLOADS_DIR=./uploads
OUTPUT_DIR=./output
LOGS_DIR=./logs
MODELS_DIR=./models

# AWS S3 (optional)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=son1kvers3-assets

# ============================================================================
# EMAIL SERVICE (for notifications)
# ============================================================================

# SMTP Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@son1kvers3.com

# ============================================================================
# RATE LIMITING & PERFORMANCE
# ============================================================================

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Worker Configuration
WORKER_COUNT=4
WORKER_TIMEOUT=300

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/Disable Features
ENABLE_VOICE_CLONING=true
ENABLE_NOVA_POST=true
ENABLE_ANALYTICS=true
ENABLE_STEALTH_SYSTEM=true
ENABLE_COMMUNITY_HUB=true
ENABLE_ADMIN_DASHBOARD=true

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Testing
TEST_MODE=false
MOCK_EXTERNAL_APIS=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# NOTES
# ============================================================================

# 1. Never commit the .env file with real credentials to version control
# 2. Use strong, unique values for JWT_SECRET_KEY in production
# 3. Configure CORS_ORIGINS to only allow your frontend domain in production
# 4. Most features work without external APIs using fallback implementations
# 5. For production deployment, use PostgreSQL instead of SQLite
# 6. Enable Sentry for production error tracking
# 7. Configure proper proxies for the stealth system in production
